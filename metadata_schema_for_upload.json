    "type": "object",
    "title": "DAFNI Metadata Schema",
    "description": "This schema provides a reference to validate metadata against in the backend. ",
    "required": [
        "@context",
        "@type",
        "dct:language",
        "dct:title",
        "dct:description",
        "dcat:keyword",
        "dct:subject",
        "dct:license",
        "dct:creator",
        "dcat:contactPoint",
        "dct:created",
        "dct:spatial",
        "geojson",
        "dct:PeriodOfTime",
        "dafni_version_note"
    ],
