        },
        "dcat:keyword": {
            "type": "array",
            "minitems": 1,
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "dct:subject": {
            "type": "string",
            "enum": [
                "Biota",
                "Boundaries",
                "Climatology / Meteorology / Atmosphere",
                "Economy",
                "Elevation",
                "Environment",
                "Farming",
                "Geoscientific Information",
                "Health",
